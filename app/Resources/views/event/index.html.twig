{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_registration_index' %}
    {% block body %}
        <div class="row">
            <div id="main" class="col-sm-12">                
                {% block main %}
                    <h2>{{ 'title.event_info'|trans }}</h2>    
                    <table class="table">
                        <tbody>
                            <tr>
                                <th>{{ 'label.event'|trans }}</th>
                                <td>{{ event.name }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'label.location'|trans }}</th>
                                <td>{{ event.location }}</td>
                            </tr>      
                            <tr>
                                <th>{{ 'label.date'|trans }}</th>
                                <td>{{ event.date|date("m/d/Y") }}</td>
                            </tr>      
                            <tr>
                                <th>{{ 'label.time'|trans }}</th>
                                <td>{{ event.time|date("H:i:s")}}</td>
                            </tr>      
                            <tr>
                                <th>{{ 'label.maxOccupancy'|trans }}</th>
                                <td>{{ event.maxOccupancy }}</td>
                            </tr>      
                            <tr>
                                <th>{{ 'label.freeOccupancy'|trans }}</th>
                                <td>{{ event.freeOccupancy }}</td>
                            </tr>                           
                        </tbody>
                    </table>
                    <h2>{{ 'title.event_register'|trans }}</h2>

                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>{{ 'label.first_name'|trans }}</th>
                                <th>{{ 'label.last_name'|trans }}</th>
                                <th>{{ 'label.CWID'|trans }}</th>
                                <th>{{ 'label.email'|trans }}</th>
                                <th>{{ 'label.building'|trans }}</th>
                                <th>{{ 'label.apt'|trans }}</th>
                                <th>{{ 'label.phone_number'|trans }}</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for resident in residents %}
                                <tr>
                                    <td>{{ resident.firstName }}</td>
                                    <td>{{ resident.lastName }}</td>
                                    <td>{{ resident.CWID }}</td>
                                    <td>{{ resident.email }}</td>
                                    <td>{{ resident.building }}</td>
                                    <td>{{ resident.apt }}</td>
                                    <td>{{ resident.phone }}</td>
                                    <td>
                                        <div class="item-actions">
                                            <a href="{{ path('register_show_detail', { resident_id: resident.id }) }}" class="btn btn-sm btn-default">
                                                {{ 'action.show'|trans }}
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="4" align="center">{{ 'record.no_records_found'|trans }}</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                {% endblock %}
            </div>
        {% endblock %}

